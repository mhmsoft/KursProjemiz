@model IEnumerable<iller.Models.Iller>
@{
    ViewBag.Title = "Index";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script type="text/javascript">

    $("document").ready(function() {
        
        $("#il").change(function () {
            var ilID = $(this).val();
            $("#ilce").empty();
          
            $.ajax({
                url: '@Url.Action("ilceGetir")',
                type: 'post',
                datatype: 'json',
                data: { Id: ilID },
                success: function (response) {
                    $.each(response, function () {
                        $("#ilce").append("<option value='"+this.ilceID+"'>"+this.Ilce+"</option>");
                    });
                }

            });
        });
    });

</script>

<h2>Index</h2>
<select name="il" id="il">
    @foreach (var item in Model)
    {
        <option value="@item.IlID">@item.Il</option>
    }
</select>
<select id="ilce" name="ilce"></select>
