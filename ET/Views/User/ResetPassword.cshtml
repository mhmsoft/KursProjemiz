@model ET.Models.ViewModel.resetPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7" style="border:1px solid #FE980F;    border-radius: 5px;">
                <div class="form-wrap">
                    <h2 class="mb-5" style="color:#FE980F">Reset Password</h2>
                    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                    {
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong>Tebrikler!</strong>@ViewBag.Message <br />
                                Giriş yapmak için  @Html.ActionLink("Login", "Login", "User")
                            </div>
                        }
                    }
                    else
                    {
                        using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.resetCode)
                            <div class="row">
                                <div class="col-md-10 form-group">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control py-2", placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 form-group">
                                    @Html.EditorFor(model => model.newPassword, new { htmlAttributes = new { @class = "form-control py-2", placeholder = "New Password" } })
                                    @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 form-group">
                                    @Html.EditorFor(model => model.comfirmPassword, new { htmlAttributes = new { @class = "form-control py-2", placeholder = "Comfirm Password" } })
                                    @Html.ValidationMessageFor(model => model.comfirmPassword, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <input type="submit" value="Reset" class="btn btn-primary px-5 py-2">
                                </div>
                            </div>
                        }
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Error!</strong>@ViewBag.Message
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
