@model ET.Models.ViewModel.Account.UserAddress

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
}
<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7" style="border:1px solid #FE980F;    border-radius: 5px;">
                <div class="form-wrap">
                    <h2 class="mb-5" style="color:#FE980F">Kişisel Bilgiler</h2>
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>address</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Adres başlığı")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address.title)
                            </dd>

                            <dt>
                                @Html.DisplayName("Adres")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address.addressName)
                            </dd>

                            <dt>
                                @Html.DisplayName("İl")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address.city.cityName)
                            </dd>

                            <dt>
                                @Html.DisplayName("İlçe")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.address.district.districtName)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
