@model IEnumerable<EF.Models.brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Markalar</h4>

<p>
    @Html.ActionLink("Yeni Marka", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Marka")
        </th>
        <th>
            @Html.DisplayName("Açıklama")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.brandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brandDesc)
        </td>
        <td>
            @Html.ActionLink("Değiştir", "Edit", new { id=item.brandId }) |
         
            @Html.ActionLink("Sil", "Delete", new { id=item.brandId })
        </td>
    </tr>
}

</table>
