@model IEnumerable<EF.Models.ViewModel.Account.UserAddress>

@{
    ViewBag.Title = "Index";
}

<h4 style="text-align:center">Üyeler</h4>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Rol")
        </th>
        <th>
            @Html.DisplayName("Kullanıcı Adı")
        </th>
        <th>
            @Html.DisplayName("Ad")
        </th>
        <th>
            @Html.DisplayName("Soyad")
        </th>
        <th>
            @Html.DisplayName("Mail Doğrulaması")
        </th>
        <th>
            @Html.DisplayName("Login Denemesi")
        </th>
        <th>
            @Html.DisplayName("Login Zamanı")
        </th>
        <th>
            @Html.DisplayName("Üyelik Durumu")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.role.roleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.isMailVerified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.loginAttempt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.loginTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.isActive)
        </td>

        <td>
            @Html.ActionLink("Değiştir", "Edit", new { id = item.user.userId }) |
            @Html.ActionLink("Adres Bilgisi", "Details", new { id = item.user.userId })
            @Html.ActionLink("Sil", "Delete", new { id = item.user.userId })
        </td>
    </tr>
    }
</table>
